@model Hostele.Areas.Admin.ViewModels.GeneratePasswordViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Edit user";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="a" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="a" class="form-label"></label>
                <span asp-validation-for="a" class="text-danger"></span>
            </div>
             <div class="form-floating">
                            <input asp-for="x" class="form-control" autocomplete="new-password" aria-required="true" />
             <label asp-for="x" class="form-label"></label>
             </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Generate temporary Password</button>
        </form>
    </div>
</div>

