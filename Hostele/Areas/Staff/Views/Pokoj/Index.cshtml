@model IEnumerable<Hostele.Models.ViewModels.PokojViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nazwa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Opis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hostel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rodzaj)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.CenaZaNocleg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IloscLozek)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hostel.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rodzaj.NazwaRodzaju)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.CenaZaNocleg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IloscLozek)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
