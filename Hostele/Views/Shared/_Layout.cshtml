@using Hostele.Utility
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Hostele</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/bootswatch.css"/>
    
    <link rel="stylesheet" href="~/Hostele.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Rezerwacja Hosteli ATH</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Strona Główna</a>
                    </li>
                     @if (User.IsInRole(SD.Role_Staff))
                     {
                         <li class="nav-item">
                             <a class="nav-link text-dark" asp-area="Staff" asp-controller="Pokoj" asp-action="Index">Pokoje</a>
                         </li>
                         <li class="nav-item">
                             <a class="nav-link text-dark" asp-area="Staff" asp-controller="Hostel" asp-action="Index">Hostel</a>
                         </li>
                         <li class="nav-item">
                             <a class="nav-link text-dark" asp-area="Staff" asp-controller="Rodzaj" asp-action="Index">Rodzaj</a>
                         </li>
                     }
                       @if (User.IsInRole(SD.Role_User))
                                          {
                         <li class="nav-item">
                             <a class="nav-link text-dark" asp-area="User" asp-controller="Wypozyczenia" asp-action="Index">Rezerwuj</a>
                         </li>
                     }
                    @if (User.IsInRole(SD.Role_Admin))
                    {
                        <li class="nav-item">
                            <a class="nav-link " asp-area="Admin" asp-controller="UserRoles" asp-action="Index">Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="Admin" asp-controller="RoleManager" asp-action="Index">Roles</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="PasswordRestrictions" asp-action="Index">Restrictions</a>
                        </li>
                    }
                </ul>
                 <partial name="_LoginPartial"/>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

